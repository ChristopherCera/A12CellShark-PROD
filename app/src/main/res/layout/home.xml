<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/Top_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bot_Guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/serialContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/Top_Guideline"
        app:layout_constraintEnd_toEndOf="@id/end_guideline">

        <TextView
            android:id="@+id/serialTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Device Serial Number"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="?colorPrimary"
            app:layout_constraintStart_toStartOf="@id/serialContainer"
            app:layout_constraintTop_toTopOf="@id/serialContainer"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/device_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="Unknown"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/serialTV"
            app:layout_constraintStart_toStartOf="@id/serialContainer"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
-
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activeInterfaceContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/serialContainer"
        app:layout_constraintEnd_toEndOf="@id/end_guideline">

        <TextView
            android:id="@+id/activeInterfaceStatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Connection State"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/activeInterfaceDynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="Unknown"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/activeInterfaceStatic"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cellsharkConnectionState"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        app:layout_constraintStart_toStartOf="@id/start_guideline"
        app:layout_constraintTop_toBottomOf="@+id/activeInterfaceContainer"
        app:layout_constraintEnd_toEndOf="@id/end_guideline">

        <TextView
            android:id="@+id/cellSharkConnectionStatic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smart Endpoint Connection State"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="?colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/cellSharkConnectionDynamic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:hint="Unknown"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/cellSharkConnectionStatic"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>